# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git

# =============================================================================
# APP ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
APP_NAME=Glow
APP_VERSION=0.1.0

# =============================================================================
# SUPABASE CONFIGURATION (Required)
# =============================================================================
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Database
SUPABASE_DB_URL=postgresql://postgres:[password]@db.your-project-id.supabase.co:5432/postgres

# Realtime
SUPABASE_REALTIME_ENABLED=true

# Storage
SUPABASE_STORAGE_URL=https://your-project-id.supabase.co/storage/v1

# =============================================================================
# FIREBASE CONFIGURATION (Optional - for Analytics)
# =============================================================================
FIREBASE_API_KEY=AIzaSy...
FIREBASE_PROJECT_ID=glow-project-id
FIREBASE_APP_ID=1:123456789:web:abcdef
FIREBASE_MESSAGING_SENDER_ID=123456789

# =============================================================================
# OBSERVABILITY & MONITORING
# =============================================================================
# Sentry (Error tracking)
SENTRY_DSN=https://public-key@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Analytics
ENABLE_ANALYTICS=false
ANALYTICS_DEBUG_MODE=true

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_BASE_URL=https://api.glow.dev
API_TIMEOUT=30000
API_MAX_RETRIES=3

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_CRASH_REPORTING=false
ENABLE_REALTIME=true
ENABLE_OFFLINE_MODE=true
ENABLE_DEBUG_LOGGING=true

# Experimental Features
ENABLE_BLOCKS_ENGINE=true
ENABLE_LIENZOS=false
ENABLE_CONTEXTUAL_IDENTITY=false

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable Flutter DevTools
FLUTTER_DEVTOOLS=true

# Mock Data for Development
USE_MOCK_DATA=false

# =============================================================================
# SECURITY
# =============================================================================
# JWT Secret (for local development only)
JWT_SECRET=your-local-jwt-secret-here

# Encryption Keys (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your-encryption-key-here
